<form method="post" action="{{ path('app_post_delete', {'slug': post.title}) }}" onsubmit="return confirm('Are you sure you want to delete this post?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
    <button type="submit" class="btn btn-danger">Supprimer</button>
</form>
